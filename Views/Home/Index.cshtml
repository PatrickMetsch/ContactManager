@model List<Manager>
@{
    ViewBag.Title = "Contact Manager";
}

<a asp-controller="Manager" asp-action="Add">Add Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Manager" asp-action="Details" asp-route-id="@manager.ManagerId">@manager.FirstName</a>
                </td>
                <td>
                    <a asp-controller="Manager" asp-action="Details" asp-route-id="@manager.ManagerId">@manager.LastName</a>
                </td>
                <td>@manager.Phone</td>
                <td>@manager.Email</td>
                <td>@manager.Category.CategoryName</td>
            </tr>
        }
    </tbody>
</table>
